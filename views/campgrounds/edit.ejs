<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Edit Pdf</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/pdfs/<%=campgrounds._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="campgrounds[title]" value="<%=campgrounds.title%>" required>
                </div>
 
                <div class="mb-3">
                    <label class="form-label" for="image">Add Pdf</label>
                    <input class="form-control" type="file" name="image" id="image" multiple>
                </div> 
               
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="campgrounds[description]" required><%=campgrounds.description%></textarea>
                </div> 
                <div class="mb-3">
                    <% campgrounds.image.forEach((img,i)=>{%>
                        <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                        </div>
                        <label for="">Delete?</label>
                        <%})%>
                    </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update Pdfs</button>
                </div>      
            </form>
            <a href="/pdfs/<%=campgrounds._id%>">Back to Pdfs</a>
        </div>
    </div>
